{
  // This tsconfig is for gulp. ts-node will look for this file exactly and is not easily configurable.
  "extends": "./tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES5",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
